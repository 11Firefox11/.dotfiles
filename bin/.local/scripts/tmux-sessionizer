#!/usr/bin/env bash

script_path=$(realpath "${BASH_SOURCE[0]}")

if [[ ! -z "$1" ]]; then
  session=$((fdfind --min-depth 1 --max-depth 1 --type d --exclude='.*' . "$1";) | sed -e "s,^$1/,," | fzf --bind "space:become(bash $script_path $1/{})")
else
  session=$((echo "\$HOME"; echo "$HOME/.dotfiles"; fdfind --min-depth 1 --max-depth 1 --type d --exclude='.*' . ~/work ~/personal ~/school ~;) | sed -e 's,^/home/awakefox/,,' | fzf --bind "space:become(bash $script_path $HOME/{})")
fi

if [[ $session == "" ]]; then
  exit
fi

if [[ ! -z "$1" ]]; then
  session_path="$1/$session"
else
  session_path="$HOME"
  if [[ $session != "\$HOME" ]]; then
    session_path="$session_path/$session"
  fi
fi

session_name=$(basename "$session_path" | tr . _)
session_name_max_length="16"
session_name_max_length_actual=$(( $session_name_max_length - 2 ))

if (( ${#session_name} > session_name_max_length_actual )); then
  session_name="${session_name:0:session_name_max_length_actual}"
fi

if ! tmux has-session -t "$session_name" 2> /dev/null; then
  tmux new-session -ds "$session_name" -c "$session_path"
fi

if [ "$TERM_PROGRAM" == "tmux" ]; then
  tmux switch-client -t "$session_name"
else
  tmux attach -t "$session_name"
fi

if type "zoxide" > /dev/null; then
  zoxide add "$session_path"
fi
